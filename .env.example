# AWS Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_DEFAULT_REGION=eu-west-3

# Mistral AI Configuration
MISTRAL_API_KEY=YOUR_MISTRAL_API_KEY
MISTRAL_API_URL=https://api.mistral.ai/v1
MISTRAL_MODEL_ID=mistral-large-latest  # Optional, defaults to mistral-large-latest

# LLM Provider Configuration
LLM_PROVIDER=mistral  # Options: mistral, deepseek, bedrock, etc.
ENABLED_TOOLS=jira    # Comma-separated list of tools to enable

# Jira Configuration
JIRA_CLOUD=True
JIRA_INSTANCE_URL=https://your-instance.atlassian.net/
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=YOUR_JIRA_API_TOKEN
JIRA_DEFAULT_PROJECT_KEY=YOUR_PROJECT_KEY  # Default project key to use for Jira tickets

# Debug Configuration
DEBUG_MODE=false      # Set to 'true' to enable verbose debugging 